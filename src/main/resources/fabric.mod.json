{
    "schemaVersion": 1,
    "id": "still-clouds",
    "version": "${version}",
    "name": "Still Clouds",
    "description": "A Minecraft mod that can make clouds stay still, catch up smoothly, and more.",
    "authors": [
        "Jack Gabriel C. Acodili"
    ],
    "contact": {
        "homepage": "https://modrinth.com/mod/still-clouds",
        "sources": "https://github.com/acodili-jg/still-clouds"
    },
    "license": "MIT",
    "icon": "assets/still-clouds/icon.png",
    "environment": "client",
    "entrypoints": {
        "client": [
            "io.github.acodili.jg.still_clouds.entrypoint.StillCloudsClientEntrypoint"
        ],
        "modmenu": [
            "io.github.acodili.jg.still_clouds.entrypoint.StillCloudsModMenuEntrypoint"
        ]
    },
    "accessWidener": "still-clouds.accesswidener",
    "mixins": [
        {
            "config": "still-clouds.client.mixins.json",
            "environment": "client"
        }
    ],

    "depends": {
        "fabricloader": "*",
        "minecraft": "*",
        "java": ">=17"
    },
    "recommends": {
        "fabricloader": "^0.14.21",
        "minecraft": "^1.20.1",
        "modmenu": "^7.1.0",
        "java": "17",
        "fabric-api": "^0.84.0"
    }
}
